schema {
    query: Query
    mutation: Mutation
}

type Query {
    playlists: [PlayList!]!,
    tracks(inPlaylistId: Int, notInPlaylistId: Int): [Track!]!
}

type PlayList {
    id: Int!
    name: String!
    tracks: [Track!]!
    owner: Boolean!
}

type Track {
    id: Int!
    title: String!
    performer: String!
    duration: Int!
    album: String!
    playcount: Int!
    publicationDate: String!
    description: String!
    offlineAvailable: Boolean!
}
